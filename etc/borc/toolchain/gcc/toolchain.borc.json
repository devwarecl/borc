{
    "id": "gcc",
    "tools": [
        {
            "type": "compiler",
            "command": "gcc",
            "buildRules": [
                {
                    "input": {
                        "fileType": "c++/source"
                    },
                    "output": {
                        "fileType": "native/object",
                        "fileName": "${inputFileName}.obj"
                    }
                }
            ],
            "switches": {
                "dialects": [
                    { "name": "11",  "flag": "-std=c++11" },
                    { "name": "14",  "flag": "-std=c++14" },
                    { "name": "17",  "flag": "-std=c++17" },
                    { "name": "20",  "flag": "-std=c++20" }
                ],
                "optimizationLevels": [
                    { "name": "no", "flag": "-O0" },
                    { "name": "size", "flag": "-O1" },
                    { "name": "speed", "flag": "-O2" },
                    { "name": "ultraSpeed", "flag": "-O3" }
                ],
                "debugInformation": "-g",
                "includePath": "-I",
                "compile": "-c",
                "outputFile": "-o",
                "generateBuildDependencies": "-MM -MG"
            }
        }, 
        {
            "type": "linker",
            "command": "gcc",
            "buildRules": [
                {
                    "input": {
                        "moduleType": ["application/gui", "application/cli"],
                        "fileType": "native/object"
                    },
                    "output": {
                        "fileType": "native/executable",
                        "name": "${moduleName}"
                    }
                }, 
                {
                    "input": {
                        "moduleType": "library/dynamic",
                        "fileType": "native/object"
                    },
                    "flags": [
                        "-shared"
                    ],
                    "output": {
                        "fileType": "native/library",
                        "fileName": "lib${moduleName}.so"
                    }
                }
            ],
            "switches": {
                "outputFile": "-o",
                "importLibrary": "-l",
                "libraryPath": "-L"
            }
        },
        {
            "type": "linker",
            "command": "ar",
            "buildRules": [
                {
                    "input": {
                        "moduleType": "library/static",
                        "fileType": "native/object"
                    },
                    "flags": "rcs",
                    "output": {
                        "type": "native/archive",
                        "fileName": "lib${moduleName}.a"
                    }
                }
            ]
        }
    ]
}
